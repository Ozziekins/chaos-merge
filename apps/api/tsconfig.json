{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "typeRoots": ["../node_modules/@types", "node_modules/@types"],
      "moduleResolution": "node",
      "composite": true
    },
    "include": ["src"]
  }
  